<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrliu.community.mapper.QuestionMapper">

    <sql id="table_name">question</sql>

    <sql id="all_column">
        id, title, description, gmt_create, gmt_modified, creator, comment_count, view_count, like_count, tag
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.mrliu.community.model.Question">
        INSERT INTO <include refid="table_name"/>
        (title, description, gmt_create, gmt_modified, creator, tag)
        VALUES
        (#{title}, #{description}, #{gmtCreate}, #{gmtModified}, #{creator}, #{tag})
    </insert>

    <select id="list" resultType="com.mrliu.community.model.Question">
        SELECT * from <include refid="table_name"/>
    </select>

    <select id="listByAccountId" resultType="com.mrliu.community.model.Question">
        SELECT * from <include refid="table_name"/> where creator = #{accountId}
    </select>

    <select id="selectById" resultType="com.mrliu.community.model.Question">
        SELECT * from <include refid="table_name"/> where id = #{id}
    </select>

</mapper>